<Window x:Class="EmailClient.SendEmail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailClient"
        mc:Ignorable="d"
        Title="SendEmail" Height="350" Width="450">
	<Grid>
		<Label x:Name="label" Content="To:" HorizontalAlignment="Left" Margin="84,12,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.905,0.308"/>
		<TextBox x:Name="txtTo" Height="33" Margin="149,5,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
		<Label x:Name="label_Copy" Content="Subject:" HorizontalAlignment="Left" Margin="84,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.905,0.308"/>
		<TextBox x:Name="txtSubject" Height="33" Margin="149,38,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
		<TextBox x:Name="txtMessage"  Margin="10,102,10,0" TextWrapping="Wrap" Text="message" VerticalAlignment="Top" AcceptsReturn="True"/>
		<Button x:Name="button" Content="Send" HorizontalAlignment="Left" Margin="4,12,0,0" VerticalAlignment="Top" Width="75" Height="59" Click="button_Click"/>

	</Grid>
</Window>
